{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            $(".GaugeMeter").gaugeMeter();
        });

        let loadStatUrl = "{{ path('getStat')|escape('js') }}";

        function loadStat () {
            $.get( loadStatUrl, function( data ) {
                if (data) {
                    $("#statfull").html(data);
                    $(".GaugeMeter").gaugeMeter();
                    setTimeout(function() {
                        loadStat();
                    }, 1000);
                }
            });
        };

        loadStat ();


    </script>
{% endblock %}