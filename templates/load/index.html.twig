{% extends 'main.html.twig' %}

{% block install_block %}
{#    Nothing to show#}
{% endblock %}

{% block body %}
    <div id="internet_problem" style="display: none; background:#15191F; position: absolute; left: 0px; height: 100%; width: 100%; z-index: 999999; scroll: none">
        <div style="display: block; color: white; text-align: center; margin-top: 10% ">Problem z Internetem..</div>
    </div>
{% endblock %}

{% block javascripts %}
<script>
     Preloader.show();

     let loadCheckUrl = "/load/check";

     $.get( loadCheckUrl, [], function( data ) {

         console.log(data);

         if (data.status && data.status=="OK") {
             document.location.href = "/";
             return;
         }

         setTimeout(function() {
             Preloader.hide();
             $('#internet_problem').show();
         }, 1000);
     });
</script>
{% endblock %}